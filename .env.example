# 应用基础配置
APP_NAME=健康管理平台
APP_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000
SERVICE_NAME=health-platform
SERVICE_VERSION=1.0.0

# 数据库配置
DB_TYPE=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_NAME=health_db
DB_USER=admin
DB_PASS=<your-password>
DB_AUTH_SOURCE=admin
DB_SSL=false
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=10
DB_CONNECT_TIMEOUT=10000

# Redis配置
REDIS_CLUSTER_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<your-password>
REDIS_KEY_PREFIX=health:
REDIS_SSL=false
REDIS_RETRY_TIME=3
REDIS_RETRY_ATTEMPT_LIMIT=5
REDIS_RETRY_INTERVAL=1000

# JWT配置
JWT_SECRET=<your-jwt-secret>
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=30

# 存储配置
STORAGE_DRIVER=local
FILE_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# AWS配置（如果使用S3存储）
AWS_REGION=<your-region>
AWS_ACCESS_KEY_ID=<your-access-key>
AWS_SECRET_ACCESS_KEY=<your-secret-key>
AWS_S3_BUCKET=<your-bucket>
AWS_S3_ENDPOINT=<your-endpoint>
AWS_S3_SSL=true

# 监控配置
MONITOR_ENABLED=true
MONITOR_SAMPLE_RATE=100
METRICS_ENABLED=true
METRICS_PREFIX=health_
LOG_LEVEL=info
LOG_CHANNEL=console

# Sentry错误追踪（生产环境）
SENTRY_DSN=<your-sentry-dsn>
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# 安全配置
SECURITY_KEY=<your-security-key>
ENCRYPTION_KEY=<your-encryption-key>
API_RATE_LIMIT=100
API_RATE_WINDOW=900
ALLOWED_ORIGINS=http://localhost:3000
CORS_MAX_AGE=86400
DDOS_PROTECTION_ENABLED=true
DDOS_MAX_REQUESTS=1000
DDOS_TIME_WINDOW=60
XSS_PROTECTION_ENABLED=true
SQL_INJECTION_PROTECTION=true
CSRF_PROTECTION=true
CSRF_TOKEN_EXPIRE=3600
SECURE_HEADERS_ENABLED=true

# 集群配置
CLUSTER_ENABLED=false
CLUSTER_NAME=health-cluster
CLUSTER_SIZE=3
CLUSTER_SYNC_INTERVAL=5000
CLUSTER_HEARTBEAT_INTERVAL=1000

# AI服务配置
AI_SERVICE_URL=<your-ai-service-url>
AI_SERVICE_KEY=<your-ai-service-key>
AI_MODEL_VERSION=1.0.0
AI_REQUEST_TIMEOUT=30000
AI_MAX_RETRIES=3
AI_BATCH_SIZE=10
AI_CACHE_TTL=3600
AI_RESULT_EXPIRY=86400

# OpenAI配置
OPENAI_API_KEY=<your-openai-key>
OPENAI_ORG_ID=<your-org-id>

# DeepSeek配置
DEEPSEEK_API_KEY=<your-deepseek-key>
DEEPSEEK_API_BASE=<your-api-base> 